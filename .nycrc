{
  "check-coverage": true,
  "per-file": true,
  "lines": 80,
  "statements": 80,
  "functions": 80,
  "branches": 80,
  "include": [
    "src/**/*.ts"
  ],
  "exclude": [
    "src/app.ts",
    "src/index.ts",
    "src/config",
    "src/swagger",
    "src/tests",
    "coverage/*.ts"
  ],
  "ignore-class-method": "methodToIgnore",
  "reporter": [
    "html",
    "lcov",
    "text-summary"
  ],
  "extension": [
    ".ts",
    ".tsx"
  ],
  "all": true
}
